<%- include('partials/header') %>

<div class="max-w-2xl mx-auto px-4 py-10">
  <h1 class="text-3xl font-bold text-gray-800 mb-4">Contact Us</h1>
  <p class="text-gray-600 mb-6">Got questions or feedback? We'd love to hear from you.</p>

  <form action="#" method="POST" class="space-y-4">
    <input type="text" name="name" placeholder="Your Name" class="w-full px-4 py-2 border rounded-lg" required>
    <input type="email" name="email" placeholder="Your Email" class="w-full px-4 py-2 border rounded-lg" required>
    <textarea name="message" rows="5" placeholder="Your Message" class="w-full px-4 py-2 border rounded-lg" required></textarea>
    <button type="submit" class="bg-blue-600 text-white px-6 py-2 rounded-lg hover:bg-blue-700">Send Message</button>
  </form>
</div>

<%- include('partials/footer') %>
